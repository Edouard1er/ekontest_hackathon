<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21sp"
        android:layout_marginLeft="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/which_formation"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_weight="1"
            android:text="Formation 1"
            android:textStyle="italic|bold"
            />
        <TextView
            android:id="@+id/deleteAcademic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="Delete"
            android:textStyle="normal"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21sp"
        android:layout_marginLeft="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_weight="1"
            android:text="Level of Study" />

        <TextView
            android:id="@+id/tv_level_of_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21sp"
        android:layout_marginLeft="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView37"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_weight="1"
            android:text="Institution" />

        <TextView
            android:id="@+id/tv_institution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21sp"
        android:layout_marginLeft="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_weight="1"
            android:text="Faculty" />

        <TextView
            android:id="@+id/tv_faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21sp"
        android:layout_marginLeft="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_weight="1"
            android:text="Degree" />

        <TextView
            android:id="@+id/tv_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21sp"
        android:layout_marginLeft="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_weight="1"
            android:text="Start year" />

        <TextView
            android:id="@+id/tv_start_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21sp"
        android:layout_marginLeft="0sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView45"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_weight="1"
            android:text="End year" />

        <TextView
            android:id="@+id/tv_end_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <View style="@style/Divider"/>

    </LinearLayout>


</LinearLayout>