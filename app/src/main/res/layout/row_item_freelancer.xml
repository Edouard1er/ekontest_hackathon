<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"


    >

    <androidx.cardview.widget.CardView
        android:id="@+id/row_item_freelancer_id"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_freelancer"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:contentDescription="TODO"
                android:background="@drawable/username"/>

            <TextView
                android:id="@+id/name_freelancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Numbers"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:padding="2dp"
                android:layout_gravity="center"
                />
            <RatingBar
                android:id="@+id/rating_bar_item_freelancer"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="1.5"
                android:layout_gravity="center"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="2dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"

                   >
                    <TextView
                        android:id="@+id/tvCours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text="Documents : "
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:gravity="end"
                        />
                    <TextView
                        android:id="@+id/nbr_cours_freelancer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text=" 0"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:gravity="start"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"

                    >
                    <TextView
                        android:id="@+id/tvEtudiant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text="Etudiants : "
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:gravity="end"
                        />
                    <TextView
                        android:id="@+id/nbr_etudiant_freelancer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text=" 0"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:gravity="start"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"

                    >
                    <ImageView
                        android:id="@+id/add_favorite"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/remove_favorite"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:visibility="gone"
                        />

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>









</RelativeLayout>