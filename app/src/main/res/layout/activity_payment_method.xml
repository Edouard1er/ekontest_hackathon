<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMethodActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/couleur4"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:theme="?attr/actionBarTheme"
        app:subtitleTextColor="@color/couleur1"
        app:title="@string/strPaymentMethod"
        app:titleTextColor="@color/couleur1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</FrameLayout>