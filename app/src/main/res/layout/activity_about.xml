<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    tools:context=".ui.about_us.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/couleur4"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:theme="?attr/actionBarTheme"
        app:subtitleTextColor="@color/couleur1"
        app:title="@string/strAbout"
        app:titleTextColor="@color/couleur1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/pwofpam2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_about"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fontFamily="@font/gotham"
                    android:lineSpacingExtra="8sp"
                    android:text="PwofPam est une application mobile qui met en relation des eleves, des tuteurs et des professeurs. PwofPam est une application mobile qui met en relation des eleves, des tuteurs et des professeurs. PwofPam est une application mobile qui met en relation des eleves, des tuteurs et des professeurs."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/version_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="Version 1.0.0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/contact_us_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Contact us:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/email_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="constellation@gmail.com"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/share_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="Share with friends"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/copyright_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="Copyright"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>