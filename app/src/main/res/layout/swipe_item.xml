<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"


    >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/row_item_freelancer_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/altUserImage"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="@color/couleur3"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/altTxtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:text="AD"
                        android:textColor="@color/couleur1"
                        android:textSize="40dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_freelancer_home"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:contentDescription="TODO"
                    android:scaleType="centerInside"
                    android:src="@drawable/username" />

                <TextView
                    android:id="@+id/id_nom_freelancer_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Numbers"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    />
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/id_simpe_rating_bar_home"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:numStars="5"
                    android:rating="1.5"
                    android:layout_gravity="center"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"

                        >
                        <TextView
                            android:id="@+id/tvCours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:text="Documents : "
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:gravity="end"
                            />
                        <TextView
                            android:id="@+id/id_nombre_cours_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:text=" 0"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:gravity="start"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"

                        >
                        <TextView
                            android:id="@+id/tvEtudiant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:text="Etudiants : "
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:gravity="end"
                            />
                        <TextView
                            android:id="@+id/nbr_etudiant_freelancer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:text=" 0"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:gravity="start"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"

                        >
                        <ImageView
                            android:id="@+id/add_favorite"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/remove_favorite"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:visibility="gone"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/id_page_now_home"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:text="1" />

                        <TextView
                            android:id="@+id/textView47"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/" />

                        <TextView
                            android:id="@+id/page_total_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>










</RelativeLayout>