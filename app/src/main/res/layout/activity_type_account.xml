<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeAccount">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="299dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/username" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:paddingLeft="20sp"
                android:text="@string/AccountType"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingLeft="35sp"
                android:text="@string/Rules1"
                android:textStyle="italic"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingLeft="35sp"
                android:text="@string/Rules2"
                android:textStyle="italic"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingLeft="35sp"
                android:text="@string/Rules3"
                android:textStyle="italic"
                android:textSize="10dp"/>

            <RadioGroup
                android:id="@+id/typeGroup"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginBottom="10sp"
                android:orientation="vertical"
                android:paddingLeft="35sp"
                android:paddingBottom="10sp">

                <RadioButton
                    android:id="@+id/buttonStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Student" />

                <RadioButton
                    android:id="@+id/bouttonFreelancer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:text="Freelancer" />

                <RadioButton
                    android:id="@+id/bouttonProfessor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Professor" />
            </RadioGroup>

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:onClick="nextFormAction"
                android:text="Next"
                android:visibility="gone"/>
            <Button
                android:id="@+id/save_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:onClick="saveType"
                android:text="Save"
                android:visibility="gone"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>