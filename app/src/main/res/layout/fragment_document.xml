<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentFragment">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/id_tab_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/couleur2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/couleur5"
        app:tabRippleColor="@color/bleu_fonce"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/id_purshased_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bought" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/id_available_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/id_upload_free_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free docs" />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/id_paid_uploaded_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid docs" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/id_viewpager_tab"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tab_layout"
        app:layout_constraintVertical_bias="0.768" />

</androidx.constraintlayout.widget.ConstraintLayout>